<%=provide(:title , @customer.name) %>
<div class="row">
<aside class="col-md-4">
	<section class="user_info">
		<h1>
			<%= gravatar_for @customer %>
			<%= @customer.name %>
		</h1>
	</section>

</aside> 
<div class="cols-md-8">
	<% if @customer.microposts.any?%>
	<h3> Microposts (<%=@customer.microposts.count%>) </h3>
		<ol class="Microposts">
		<%= render @microposts%>
		</ol>
		<%=will_paginate @microposts%>
		<%end%>


</div>
</div>

